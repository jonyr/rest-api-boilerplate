{% macro render_user_field(field) %}
    {% set classes = 'input' %}
    {% if field.errors %}
        {% set classes = classes + " is-danger" %}
    {% endif %}
    <div class="field">
        {{ field.label(class="label") }}
        <div class="control has-icons-left">
            {{ field(class_=classes, placeholder="John Doe")|safe }}
            <span class="icon is-small is-left">
                <i class="fa fa-user"></i>
            </span>
        </div>
        {% if field.errors %}
            <p class="help is-danger">{{ field.errors[0] }}</p>
        {% elif field.description %}
            <p class="help">{{ field.description }}</p>
        {% endif %}
    </div>
{% endmacro %}

