{% macro render_agree_terms_field(field) %}
    <div class="field">
        <div class="control">
            <label class="checkbox">
                {{ field(**kwargs)|safe }}
                I agree to the <a href="#">terms and conditions</a>
            </label>
            {% if field.errors %}
                <p class="help is-danger">{{ field.errors[0] }}</p>
            {% endif %}
        </div>
    </div>
{% endmacro %}

{% macro render_signup_field(field) %}
    {% if field.type == 'BooleanField' %}
        <div class="column">
            <label class="label">
                {{ field(**kwargs)|safe }}
                {{ field.label.text }}
            </label>
        </div>
    {% else %}
        <div class="column">
            {{ field.label(class="label") }}
            {{ field(**kwargs)|safe }}
        </div>
    {% endif %}
{% endmacro %}
